import('./quasar.variables.styl')
@import 'quasar.custom'


// app global css
.main-box
  background unset

.main-box.q-card--dark
  background #00000070

.bordered
  border solid 1px rgba(125, 125, 125, 0.3)

.bordered.q-table--cell-separator
  border-top: none
  border-bottom: none

.no-highlight .q-table tbody tr:hover
  background-color inherit

.inset-md { margin-left: 25%; margin-right: 25%; width: 50%;}

.inset-sm { margin-left: 30%; margin-right: 30%; width: 40%;}

.inset-xs { margin-left: 35%; margin-right: 35%; width: 30%;}

.no-field-after.q-field--standard
  .q-field__control:before
    border-bottom 0
  .q-field__control:after
    display none

.hide-arrow
  .q-btn-dropdown__arrow
    display none

.text-small
  font-size 90%
  line-height 100%
  font-weight 500

.th-uppercase .q-table
   th
    font-weight: 400;
    text-transform: uppercase;

.th-text-left .q-table
  th
    text-align left

.th-text-right .q-table
  th
    text-align right

.table-sticky-column
  max-width 100%

  /* bg color is important for th; just specify one */
  thead tr:first-child th:first-child
    background-color #fff
    opacity 1

  td:first-child
    background-color #f9f9f9

  thead tr:first-child th:first-child,
  td:first-child
    position sticky
    left 0
    z-index 1

.table-sticky-column.q-table--dark
  thead tr:first-child th:first-child
    background-color #2d2d2d

  td:first-child
    background-color #323232

